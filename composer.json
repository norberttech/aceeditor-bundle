{
    "name": "norberttech/aceeditor-bundle",
    "type": "symfony-bundle",
    "description": "Bundle that integrate excellent JavaScript ace editor into Symfony Form.",
    "keywords": ["ace", "code", "editor", "symfony", "form", "bundle", "javascript"],
    "license": "MIT",
    "require": {
        "php": "~8.1.0 || ~8.2.0 || ~8.3.0",
        "twig/twig": "^2.0|^3.0",
        "symfony/framework-bundle": "^5.4|^6.0|^7.0",
        "symfony/form": "^5.4|^6.0",
        "symfony/twig-bridge": "^5.4|^6.0",
        "symfony/asset": "^5.4|^6.0",
        "symfony/expression-language": "^5.4|^6.0"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.8",
        "phpunit/phpunit": "^10.5"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true
        }
    },
    "autoload": {
        "psr-4": { "AceEditorBundle\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": {
            "AceEditorBundle\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "5.0-dev"
        },
        "bamarni-bin": {
	    "bin-links": false,
	    "target-directory": "vendor-bin",
	    "forward-command": true
        }
    },
    "scripts" : {
        "build": [
            "@check:lint",
            "@check:static",
            "@test"
        ],
        "test": [
            "phpunit"
        ],
        "check:lint": [
            "@cs:check"
        ],
        "check:static": [
            "@psalm",
            "@phpstan"
        ],
        "cs:check": "@php-cs-fixer fix --dry-run",
        "cs:fix": "@php-cs-fixer fix",
        "php-cs-fixer": "vendor-bin/php-cs-fixer/vendor/bin/php-cs-fixer",
        "phpstan": "vendor-bin/phpstan/vendor/bin/phpstan",
        "psalm": "vendor-bin/psalm/vendor/bin/psalm"
    }
}
